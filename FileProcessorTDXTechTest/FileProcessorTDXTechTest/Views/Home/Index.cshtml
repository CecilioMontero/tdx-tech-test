@{
    ViewData["Title"] = "Home Page";
}
<br /><br />
<header class="masthead text-white text-center">
    <div class="overlay"></div>
    <div class="container">
        <div class="row" >
            <div class="col-xl-9 mx-auto">
                <h1 class="mb-5">Load CSV file to be displayed using FileProcessorTDXTechTest</h1>
            </div>
            <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                <form asp-controller="Load" asp-action="LoadFile" method="post" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="col-12 col-md-9 mb-2 mb-md-0">
                            <input class="btn btn-block btn-lg btn-secondary" type="file" name="file"/>
                        </div>
                        <div class="col-12 col-md-3">
                            <button class="btn btn-block btn-lg btn-primary" type="submit">Load File</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</header>